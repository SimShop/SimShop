{% extends "AdminBundle:Login:login_layout.html.twig" %}
{% trans_default_domain "symshop" %}
{% set page = 'login.message.signin' %}
{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("admin_login_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label for="username">{{ 'login.username'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

    <label for="password">{{ 'login.password'|trans }}</label>
    <input type="password" id="password" name="_password" required="required" />

    <a href="{{ path('admin_reset_request') }}">Forgot your password?</a>
    {#<input type="checkbox" id="remember_me" name="_remember_me" value="on" />#}
    {#<label for="remember_me">{{ 'login.remember_me'|trans }}</label>#}

    <input type="submit" id="_submit" name="_submit" value="{{ 'login.submit'|trans }}" />
</form>
{% endblock fos_user_content %}
